# easy function alises
alias pythonclean="rm *.py~ ; rm *.pyc"
alias cx="chmod +x" # Make file executable
alias myip="curl ipv4.icanhazip.com"
alias tm='top -o vsize' # top sorted by memory
alias tu='top -o cpu' # top sorted by cpu
alias lsd='ls -l | grep "^d"' # list the directories
alias diffs='diff --side-by-side'

# information files
alias getutils="less ~/.oh-my-zsh/custom/helpFiles/utils_list.txt"
alias getdirection="less ~/.oh-my-zsh/custom/helpFiles/direction_list.txt"
alias tricks="less ~/.oh-my-zsh/custom/helpFiles/unixTricks.txt"

# help with tarballs
alias tarhelp='echo tar -cvzf name.tgz subdir'

# trash
alias rm="trash-rm"

